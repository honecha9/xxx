.main
  .main_header
    .main_header_logo
      Tooron
      .main_header_logo_icon
        = icon("far", "comment-dots")
    .main_header_item
      .main_header_item_edit
        = link_to edit_user_path(current_user),  class: "main_header_item_edit_icon" do
          = ( "Edit" )
          
      .main_header_item_login
        = current_user.name
  
  
  .main_body
    .main_body_topics
      =link_to new_group_path  do
        =("Let's conversation!!")
        - @group.each do | group |
          .main_body_topics_group 
            = link_to '#' , class: "main_body_topics_group_botton" do
              .main_body_topics_group_botton_title
                = group.title
              .main_body_topics_group_botton_btn
                = link_to  group_comments_path(group) do
                  = ("enter")